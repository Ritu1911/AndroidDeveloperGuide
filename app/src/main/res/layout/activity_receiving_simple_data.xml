<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_receiving_simple_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kammo.alokrabi.be_a_android_developer.ReceivingSimpleData">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="#fff"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn"
            android:layout_weight="3.67"
            android:layout_width="0dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Adding an Easy Share Action"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />
        <Button
            android:id="@+id/btn2"
            android:background="@drawable/ic_arrow_forward_black_24dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_weight="0.33"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            />

    </LinearLayout>
    <WebView
        android:layout_marginBottom="50dp"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:visibility="visible"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_x="163dp"
            android:layout_y="242dp"
            android:id="@+id/mProgress" />
    </WebView>


</RelativeLayout>


